{% extends 'base.html.twig' %}

{% block title %}Configuracion usuario - Geo!{% endblock %}

{% block body %}
    <div class="container">
        <div class="row mt-5">
            <div class="col-md-6">
            <h2>Dirección IP</h2>
            <p class="lead" id="ip-address">{{ ip_cliente }}</p>
            </div>
            <div class="col-md-6">
            <h2>Dirección MAC</h2>
            <p class="lead" id="mac-address">{{ direccion_mac is null ? 'Obteniendo dirección MAC...' : direccion_mac }}</p>
            </div>
        </div>
    </div>
{% endblock %}