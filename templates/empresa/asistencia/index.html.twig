{% extends 'empresa/base.html.twig' %}

{% block title %}Horario{% endblock %}

{% block css %}
	<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="{{ asset('css/empresa/general.css') }}">
    <link rel="stylesheet" href="{{ asset('css/empresa/Menu/Menu.css') }}">
{% endblock %}

{% block body_sidebar %}
<section class="d-flex justify-content-center align-items-center full-height">
        <div class="container">
            <div class="row justify-content-center align-items-center" style="padding-bottom:50px;">
                <div class="col-12 col-md-3 d-flex justify-content-center">
                    <button class="btn-form Cl-boton1">Registrar</button>
                </div>
                <div class="col-12 col-md-3 d-flex justify-content-center">
                    <button class="btn-form Cl-boton2">Historial</button>
                </div>
                <div class="col-12 col-md-6 d-flex justify-content-end">
                    <div class="margin-busc d-flex align-items-center">
                        <button style="background-color: #fff; border: none;">
                            <img src="path/to/lupa.png" alt="">
                            <span style="padding: 0 10px; color: #0057A4;">DNI</span>
                        </button>
                        <input type="number" class="input-form mg-input1">
                    </div>
                </div>
            </div>
            <div class="row justify-content-center align-items-center margin-busc" style="    border: 2px solid #0057A4;">
                <form class="container" style="padding:50px;">
                    <div class="row justify-content-center align-items-center" >
                        <div class="col-12 col-md-8 d-flex align-items-center">
                            <p style="color: #838383; font-weight: bold; margin: 0; padding: 4px;" class="col-md-2">USUARIO</p>
                            <input type="text" class="input-form mg-input2 col-md-9" style="height: 40px; margin-left: 10px;" placeholder="">
                        </div>
                        <div class="col-12 col-md-4 d-flex align-items-center ">
                            <p style="color: #838383; font-weight: bold; margin: 0;" class="col-md-3">DNI</p>
                            <input type="text" class="input-form mg-input2 col-md-9" style="height: 40px; background-color: #FFC107a8; color: #ffffff;  font-weight: bold;" placeholder="">
                        </div>
                    </div>
                    <div class="row justify-content-center align-items-center">
                        <div class="col-12 col-md-6 d-flex align-items-center">
                            <p style="color: #838383; font-weight: bold; margin: 0; padding: 4px;" class="col-md-3">AREA</p>
                            <input type="text" class="input-form mg-input2 col-md-8" style="height: 40px; margin-left: 5px;" placeholder="">
                        </div>
                        <div class="col-12 col-md-6 d-flex align-items-center">
                            <p style="color: #838383; font-weight: bold; margin: 0; padding: 2px; flex-shrink: 0;" class="col-md-2">FECHA</p>
                            <div class="d-flex col-md-10 ">
                                <input type="text" class="input-form mg-input2 col-md-6" style="height: 40px; " placeholder="">
                                <input type="text" class="input-form mg-input2 col-md-6" style="height: 40px;" placeholder="">
                            </div>
                        </div>
                    </div>
                    <div class="row justify-content-center align-items-center">
                        <div class="col-12 col-md-6 d-flex align-items-center">
                            <p style="color: #838383; font-weight: bold; margin: 0; padding: 4px;" class="col-md-3">MOTIVO</p>
                            <select class="input-form mg-input2 col-md-8" style="height: 40px; margin-left: 5px;" placeholder="Area">
                                <option value="" disabled selected hidden></option>
                                <option>ENFERMEDAD</option>
                                <option>ACCIDENTE</option>
                                <option>FAMILIAR</option>
                                <option>OTROS</option>
                            </select>
                        </div>
                        <div class="col-12 col-md-6 d-flex align-items-center">
                            <p style="color: #838383; font-weight: bold; margin: 0; padding: 2px; flex-shrink: 0;" class="col-md-2">ARCHIVO</p>
                            <div class="d-flex col-md-10">
                                <input type="file" class="input-form mg-input2  col-md-12" style="height: 40px;">
                            </div>
                        </div>
                    </div>
                    <div class="row  align-items-center">
                        <div class="col-12 col-md-6 d-flex align-items-center">
                            <p style="color: #838383; font-weight: bold; margin: 0; padding: 4px;" class="col-md-3">MOMENTO</p>
                            <select class="input-form mg-input2 col-md-8" style="height: 40px; margin-left: 5px;" placeholder="Area">
                                <option value="" disabled selected hidden></option>
                                <option>INGRESO</option>
                                <option>SALIDA</option>
                                <option>AMBOS</option>
                            </select>
                        </div>
                    </div>
                    <div class="row justify-content-center align-items-center">
                        <div class="col-12 col-md-12 align-items-center">
                            <p style="color: #838383; font-weight: bold; margin: 0; padding: 2px; flex-shrink: 0;" class="col-md-2">DESCRIPCION</p>
                            <div class="d-flex col-md-12">
                                <textarea class="input-form mg-input2 col-md-12" style="height: 80px; margin-left: 5px;" placeholder=""></textarea>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-md-12 d-flex justify-content-end" style="padding-top: 40px;">
                    <button type="submit" class="btn-form Cl-boton2" style="height: 50px;" >GUARDAR</button>
                </div>
                </form>
            </div>
        </div>
    </section>
{% endblock %}
