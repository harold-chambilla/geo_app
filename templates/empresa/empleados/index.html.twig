{% extends 'empresa/base.html.twig' %}

{% block title %}Empleados{% endblock %}

{% block body_sidebar %}
	<div class="container mt-4">
		<div class="card p-4 shadow-sm" style="font-family: 'Courier New', Courier, monospace;">
			<div class="card-body d-flex justify-content-between align-items-center">
				<!-- Texto "Registro de Empleados" a la izquierda -->
				<h5 class="card-title mb-0">Registro de Empleados</h5>
				<!-- Nombre de usuario a la derecha -->
				<h5 class="card-title mb-0">{{ usuario }}</h5>
			</div>
			<!-- Pestañas -->
			<ul class="nav nav-tabs" id="myTabs" role="tablist">
				<li class="nav-item" role="presentation">
					<button class="nav-link active" id="registro-individual-tab" data-bs-toggle="tab" data-bs-target="#registro-individual" type="button" role="tab" aria-controls="registro-individual" aria-selected="true">Registro Individual</button>
				</li>
				<li class="nav-item" role="presentation">
					<button class="nav-link" id="registro-masivo-tab" data-bs-toggle="tab" data-bs-target="#registro-masivo" type="button" role="tab" aria-controls="registro-masivo" aria-selected="false">Registro Masivo</button>
				</li>
				<li class="nav-item" role="presentation">
					<button class="nav-link" id="historial-tab" data-bs-toggle="tab" data-bs-target="#historial" type="button" role="tab" aria-controls="historial" aria-selected="false">Historial</button>
				</li>
			</ul>
			<!-- Contenido de las pestañas -->
			<div class="tab-content mt-4" id="myTabsContent">
				<div class="tab-pane fade show active" id="registro-individual" role="tabpanel" aria-labelledby="registro-individual-tab">
					<p>Contenido de Registro Individual aquí...</p>
				</div>
				<div class="tab-pane fade" id="registro-masivo" role="tabpanel" aria-labelledby="registro-masivo-tab">
					<!-- Contenido para Registro Masivo -->
					<p>Contenido de Registro Masivo aquí...</p>
				</div>
				<div class="tab-pane fade" id="historial" role="tabpanel" aria-labelledby="historial-tab">
					<!-- Contenido para Historial -->
					<p>Contenido de Historial aquí...</p>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
